           carFollowModel="Krauss"
           accel="1.0" 
           decel="3.0"
           sigma="0.1"
           tau="1.5"
           length="11" 
           minGap="3.0" 
           maxSpeed="35" 
           guiShape="truck/semitrailer"
           vClass="trailer"/>

    <!-- 小车类型：在恶劣天气下更容易失控 -->
    <vType id="vehicle.jeep.wrangler_rubicon" 
           carFollowModel="Krauss" 
           accel="3.0" 
           decel="4.0" 
           sigma="0.3" 
           tau="1.0" 
           length="5.0" 
           minGap="2.0" 
           maxSpeed="50" 
           guiShape="passenger"
           laneChangeModel="SL2015"
           lcStrategic="0.8"  
           lcAssertive="0.3"    
           lcSpeedGain="0.5"
           lcKeepRight="0.2">
    </vType>
    
